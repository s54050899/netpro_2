    private void appendToPane(String msg, Color c)
    {
        StyleContext sc = StyleContext.getDefaultStyleContext();
        AttributeSet aset = sc.addAttribute(SimpleAttributeSet.EMPTY, StyleConstants.Foreground, c);
        thrd_status.setCharacterAttributes(aset, rootPaneCheckingEnabled);
        int len = thrd_status.getDocument().getLength();
        thrd_status.setCaretPosition(len);
        thrd_status.replaceSelection(msg);
    }

    private void get_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        ThreadBrowser a = new ThreadBrowser(url_text1.getText(),"Thread A");
        ThreadBrowser b = new ThreadBrowser(url_text2.getText(),"Thread B");
        a.start();
        b.start();
    }                                          

    private void backAActionPerformed(java.awt.event.ActionEvent evt) {                                      
        indexA--;
        try{
        if (indexA < 0)
            indexA = 0;
        String txt = (String)historyA.get(indexA);
        url_text1.setText(txt);
        browserA.setPage(txt);
        }
        catch(IOException e)
        {
            browserA.setText("Error : " +e);
        }
    }                                     

    private void forwardAActionPerformed(java.awt.event.ActionEvent evt) {                                         
        indexA++;
        try{
        if (indexA >= historyA.size())
            indexA = historyA.size() - 1;
        String txt = (String)historyA.get(indexA);
        url_text1.setText(txt);
        browserA.setPage(txt);
        }
        catch(IOException e)
        {
            browserA.setText("Error : " +e);
        }
    }                                        

    private void backBActionPerformed(java.awt.event.ActionEvent evt) {                                      
        indexB--;
        try{
        if (indexB < 0)
            indexB = 0;
        String txt = (String)historyB.get(indexB);
        url_text2.setText(txt);
        browserB.setPage(txt);
        }
        catch(IOException e)
        {
            browserB.setText("Error : " +e);
        }
    }                                     

    private void forwardBActionPerformed(java.awt.event.ActionEvent evt) {                                         
        indexB++;
        try{
        if (indexB >= historyB.size())
            indexB = historyB.size() - 1;
        String txt = (String)historyB.get(indexB);
        url_text2.setText(txt);
        browserB.setPage(txt);
        }
        catch(IOException e)
        {
            browserB.setText("Error : " +e);
        }
    }                                        

